@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "Departman Personel Satış";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Departman Personel Satış</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Personel Adı: @ViewBag.dp</li>
    </ol>

    <!-- Satış Tablosu -->
    <div class="card">
        <div class="card-body">
            <table id="satisTable" class="table table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Satış ID</th>
                        <th>Ürün</th>
                        <th>Cari</th>
                        <th>Fiyat</th>
                        <th>Miktar</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>
                            <td class="text-center">@k.SatisId</td>
                            <td>@k.Urun.UrunAd</td>
                            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
                            <td>@k.Fiyat.ToString("N2") ₺</td>
                            <td>@k.Miktar</td>
                            <td>@k.ToplamTutar.ToString("N2") ₺</td>
                            <td>@k.Tarih.ToString("dd.MM.yyyy")</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#satisTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json" },
                "pageLength": 10,
                "order": [[0, "desc"]] // Satış ID'ye göre ters sırala
            });
        });
    </script>
}

@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}