@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "Departman Detay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Departman Detay Sayfası</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Departman Adı: @ViewBag.b</li>
    </ol>

    <!-- Personel Tablosu -->
    <div class="card">
        <div class="card-body">
            <table id="detayTable" class="table table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Personel ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>
                            <td class="text-center">@k.PersonelId</td>
                            <td>@k.PersonelAd</td>
                            <td>@k.PersonelSoyad</td>
                            <td><img src="@k.PersonelGorsel" alt="Personel Görseli" style="max-width: 50px;" /></td>
                            <td class="text-center">
                                <a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" class="btn btn-sm btn-primary">
                                    <i class="fa fa-history"></i> Satışlar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#detayTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json" },
                "pageLength": 10,
                "order": [[1, "asc"]] // Adına göre sırala
            });
        });
    </script>
}

@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}