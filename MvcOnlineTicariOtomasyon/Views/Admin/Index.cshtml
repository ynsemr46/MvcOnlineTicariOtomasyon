@model List<MvcOnlineTicariOtomasyon.Models.Siniflar.Admin>
@{
    ViewBag.Title = "Yönetici Listesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Yönetici Listesi</h2>
    <div class="mb-4">
        <form method="get">
            <div class="input-group">
                <input type="text" name="p" class="form-control" placeholder="Kullanıcı adına göre ara..." />
                <button type="submit" class="btn btn-primary">Ara</button>
            </div>
        </form>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.KullaniciAd</td>
                    <td>
                        <a href="@Url.Action("AdminGetir", "Admin", new { id = admin.AdminId })" class="btn btn-warning btn-sm">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("AdminEkle", "Admin")" class="btn btn-success">Yeni Yönetici Ekle</a>
</div>